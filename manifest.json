{
  "manifest_version": 3,
  "name": "WebScribe",
  "version": "1.0.0",
  "description": "Convert any webpage into clean, structured Markdown or PDF notes — one click, offline-ready.",
  "author": "WebScribe",
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "WebScribe – Save this page as notes",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "tabs",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'"
  }
}